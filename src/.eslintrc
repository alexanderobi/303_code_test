{
  "extends": ["airbnb"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6
  },
  "rules": {
    "max-len": [2, 140, 2, {
      "ignoreUrls": true,
      "ignoreComments": true
    }],
    "no-underscore-dangle": [2, { "allowAfterThis": true }],
    "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
    "camelcase": 0,
    "prettier/prettier": "error",
    "prefer-promise-reject-errors": 0
  },
  "env": {
    "node": true,
    "mocha": true
  }
}